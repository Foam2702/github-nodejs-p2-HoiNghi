<form action="/response" method="POST">
    <h1 class="text-center font-weight-bold my-3">Sign Up</h1>
    <div class="form-group row my-5">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="name" class="form-control" name="name" id="name" placeholder="VietPham">
        </div>
    </div>
    <div class="form-group row my-5">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="email" id="email" placeholder="vp@gmail.com">
        </div>
    </div>
    <div class="form-group row my-5">
        <label for="phone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <input type="phone" class="form-control" name="phone" id="phone" placeholder="036932411">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="xacnhan">
                <label class="form-check-label" for="gridCheck1">
                    Agree join in
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row text-right">
        <div class="col-4 offset-8">
            <button type="submit" class="btn btn-primary d-none" id="dangki">Submit</button>
        </div>
    </div>
</form>
<script>
    $('#xacnhan').click(function () {
        if ($("#xacnhan").prop("checked")) {
            $('#dangki').removeClass("d-none")
        }
        else {
            $('#dangki').addClass("d-none")
        }
    })
</script>